<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.harmonytavern">

    <uses-permission android:name="android.permission.INTERNET"/>







    <!-- forceDarkAllowed = false -->
    <application
            android:forceDarkAllowed="false"



            android:name=".MyApplication"
            android:allowBackup="true"
            android:icon="@drawable/dungeoncrawler"
            android:label="@string/app_name"
            android:extractNativeLibs="true"
            android:supportsRtl="true"
            android:theme="@android:style/Theme.Light.NoTitleBar">

<!--        no adjustResize in windowSoftInputMode!!   -->
        <activity android:exported="true" android:name=".EntryEntryAbilityActivity"
                  android:windowSoftInputMode="stateHidden"
                  android:configChanges="orientation|keyboard|layoutDirection|screenSize|uiMode|smallestScreenSize|density"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>